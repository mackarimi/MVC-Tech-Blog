<div class="section">
  <div class="container">
    <h2 class="title">Create a New Post</h2>
    <form action="/posts/create" method="POST">
      <div class="field">
        <label class="label">Title</label>
        <div class="control">
          <input class="input" type="text" name="title" placeholder="Enter the title" required>
        </div>
      </div>

      <div class="field">
        <label class="label">Content</label>
        <div class="control">
          <textarea class="textarea" name="content" placeholder="Enter the content" required></textarea>
        </div>
      </div>

      <div class="field">
        <div class="control">
          <button class="button is-primary" type="submit">Submit</button>
        </div>
      </div>
    </form>
  </div>
</div>

