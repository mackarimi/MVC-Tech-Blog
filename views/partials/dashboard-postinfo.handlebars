<!-- dashboard-postinfo.handlebars -->
{{!-- Use Bulma CSS classes for styling --}}

{{!-- Header --}}
{{header}}

{{!-- Navigation --}}
{{navigation}}

<div class="section">
  <div class="container">
    <h2 class="title">Welcome to Your Dashboard, {{User.username}}</h2>

    <h3 class="subtitle">Your Posts</h3>
    {{#if posts}}
      {{#each posts}}
        <div class="post">
          <h3><a href="/post/{{id}}">{{title}}</a></h3>
          <p>Created on {{formatDate created_at}}</p>
          <div class="post-actions">
            <a href="/post/edit/{{id}}" class="button is-link">Edit</a>
            <a href="/post/delete/{{id}}" class="button is-danger">Delete</a>
          </div>
        </div>
      {{/each}}
    {{else}}
      <p>No posts found.</p>
    {{/if}}

    <h3 class="subtitle">Your Info</h3>
    <div class="user-info">
      <p><strong>Username:</strong> {{User.username}}</p>
      <p><strong>Email:</strong> {{User.email}}</p>
      <p><strong>Twitter:</strong> {{User.twitter}}</p>
    </div>
  </div>
</div>

{{!-- Footer --}}
{{> footer}}
