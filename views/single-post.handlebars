<!-- single-post.handlebars -->
{{! Use Bulma CSS classes for styling }}

<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{title}}</title>
    <!-- Add your CSS and JavaScript links here -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.9.3/css/bulma.min.css"
    />
    <link rel="stylesheet" href="/public/css/style.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Crimson+Text:wght@400;600;700&display=swap"
      rel="stylesheet"
    />
    <style>
      /* Add your custom styles here */ body { font-family: 'Crimson Text',
      serif; margin: 0; padding: 0; } .section { padding: 2rem; } .container {
      max-width: 960px; margin: 0 auto; } .post { margin-bottom: 2rem; } .post
      h2 { font-size: 2rem; font-weight: bold; margin-bottom: 1rem; } .post
      .post-author { font-size: 1rem; color: #888; } .post .post-content {
      margin-top: 1rem; line-height: 1.6; } .title.is-4 { margin-top: 3rem;
      margin-bottom: 1.5rem; font-size: 1.5rem; font-weight: bold; } .comments {
      margin-top: 1.5rem; padding-top: 1.5rem; border-top: 1px solid #7b9311; }
      .comment-list { list-style-type: none; margin: 0; padding: 0; } .comment {
      margin-bottom: 1.5rem; } .comment-content { margin-bottom: 0.5rem; }
      .comment-author { font-size: 0.9rem; color: #888; } .footer {
      background-color: #f5f5f5; padding: 1.5rem 0; text-align: center; }
      .footer p { margin: 0; font-size: 0.9rem; } .social-icons { margin-top:
      1rem; } .social-icon { display: inline-block; margin-right: 1rem; color:
      #888; font-size: 1.5rem; }
    </style>
  </head>

  <body>
    <section class="section">
      <div class="container">
        <div class="post">
          <h2>{{title}}</h2>
          <p class="post-author">Posted by
            {{User.username}}
            on
            {{created_at}}</p>
          <div class="post-content">
            {{{post_content}}}
          </div>
        </div>

        <h2 class="title is-4">Comments</h2>

        <div class="comments">
          <ul class="comment-list">
            {{#each comments}}
              <li class="comment">
                <div class="comment-content">{{this.content}}</div>
                <div class="comment-author">Posted by
                  {{this.author}}
                  on
                  {{this.created_at}}</div>
              </li>
            {{/each}}
          </ul>
        </div>
      </div>
    </section>

    <footer class="footer">
      <div class="container">

        <div class="social-icons">
          <a href="#" class="social-icon">Facebook</a>
          <a href="#" class="social-icon">Twitter</a>
          <a href="#" class="social-icon">Instagram</a>
        </div>
      </div>
    </footer>

    <!-- Add your JavaScript code here -->
    <script src="/create-comment.js"></script>
  </body>

</html>