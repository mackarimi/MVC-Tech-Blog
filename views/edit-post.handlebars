<article class="box">
  <h2 class="title">
    Edit Post
  </h2>
  <form class="edit-post-form">
    <div class="field">
      <label class="label" for="post-title">Title</label>
      <div class="control">
        <input name="post-title" class="input" type="text" value="{{post.title}}" />      
      </div>
    </div>
    <div>
      Posted by you on {{format_date post.created_at}}
      |
      {{post.comments.length}} {{format_plural "comment" post.comments.length}}
    </div>
    <div class="field">
      <label class="label" for="post-text">Post</label>
      <div class="control">
        <textarea id="post-text" name="post-text" class="textarea">{{post.post_text}}</textarea>
      </div>
    </div>
    <div class="field is-grouped">
      <div class="control">
        <button type="submit" class="button is-link">Save Changes</button>
      </div>
      <div class="control">
        <button type="button" class="button is-danger delete-post-btn">Delete Post</button>
      </div>
    </div>
  </form>
</article>

<script src="/js/edit-post.js"></script>
<script src="/js/delete-post.js"></script>
