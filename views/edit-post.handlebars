{{! Header }}
{{header}}

{{! Navigation }}
{{navigation}}

<div class="section">
  <div class="container">
    <h2 class="title">Edit Post</h2>
    <form action="/post/edit/{{id}}" method="POST">
      <div class="field">
        <label class="label">Title</label>
        <div class="control">
          <input
            class="input"
            type="text"
            name="title"
            value="{{title}}"
            required
          />
        </div>
      </div>

      <div class="field">
        <label class="label">Content</label>
        <div class="control">
          <textarea
            class="textarea"
            name="content"
            required
          >{{content}}</textarea>
        </div>
      </div>

      <div class="field">
        <div class="control">
          <button class="button is-primary" type="submit">Save Changes</button>
        </div>
      </div>
    </form>
  </div>
</div>

